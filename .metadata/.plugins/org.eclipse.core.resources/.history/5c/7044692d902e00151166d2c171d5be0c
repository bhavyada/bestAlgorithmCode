#include <stdio.h>
#include <stdlib.h>

struct Node{
	int value;
	struct Node* Next;
};


void push(struct Node** a, int data)
{
	struct Node* current = a;
	struct Node* newnode = (struct node*)malloc(sizeof(struct Node));
	newnode->value = data;
	newnode->Next = *a;
	*a = newnode;
}

void swap(struct Node** a)
{
	struct Node* prev = NULL;
	struct Node* current = a;
	struct Node* nextNode;
	if(a == NULL)
	{
		return;
	}
	while(current != NULL)
	{
		nextNode = current->Next;
		current->Next = prev;
		prev = nextNode;
		current = current->Next->Next;
	}
}

void PrintLinkedList(struct Node* newList)
{

	printf(" Linked List");
	while(newList!= NULL)
	{
		printf("\t");
		printf("%d",newList->value);
		newList = newList->Next;
	}
	printf("\n");
}


int main(void)
{
	struct Node* a = NULL;
	push(&a,5);
	push(&a,4);
	push(&a,3);
	push(&a,2);
	push(&a,1);
	PrintLinkedList(a);
	swap_every_two_nums(&a);
	PrintLinkedList(a);
}
